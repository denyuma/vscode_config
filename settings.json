{
  "code-runner.clearPreviousOutput": true /*coderunner*/,
  "code-runner.runInTerminal": true, //coderunner ターミナル出力
  "workbench.editor.enablePreview": false, //エクスプローラーからファイルを開いたときプレビューになることを無効にする
  "editor.tabSize": 2, //インデントの大きさ2
  "editor.insertSpaces": false, // Tabによるインデント
  "editor.renderWhitespace": "all", //半角スペースに描写
  "editor.minimap.enabled": false, //ミニマップを消去する
  "explorer.confirmDelete": false, // ファイル削除のときのポップアップを無効
  "explorer.confirmDragAndDrop": false, // ファイル編集後に自動保存
  "editor.wordWrap": "on", //長い行は折かえして表示
  "liveServer.settings.donotShowInfoMsg": true, //liveserverのinfoを非表示
  "search.showLineNumbers": true, //検索結果に行番号を含める
  "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe", //defaultのターミナルをpowershell
  "editor.suggestSelection": "first", //サジェスト(予測変換)の一覧の選択を一番上にする
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "editor.hover.enabled": false, //ツールチップを削除
  "editor.hover.sticky": false, //ツールチップを表示し続けるかどうか制御
  "liveServer.settings.CustomBrowser": "chrome",
  "editor.formatOnSave": true, // 保存したときに自動フォーマットする
  "emmet.includeLanguages": {
    "javascript": "javascriptreact" //ReactでEmmet記法を利用できるようにする
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "go.useLanguageServer": true,
  "go.alternateTools": {
    "go-langserver": "gopls"
  },
  "go.languageServerExperimentalFeatures": {
    "format": true,
    "autoComplete": true,
    "rename": true,
    "goToDefinition": true,
    "hover": true,
    "signatureHelp": true,
    "goToTypeDefinition": true,
    "goToImplementation": true,
    "documentSymbols": true,
    "workspaceSymbols": true,
    "findReferences": true,
    "diagnostics": true
  },
  "[go]": {
    "editor.snippetSuggestions": "none",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "gopls": {
    "usePlaceholders": false
  },
  "window.zoomLevel": -1,
  "diffEditor.ignoreTrimWhitespace": false
}
