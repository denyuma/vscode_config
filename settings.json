{
    "code-runner.clearPreviousOutput": true, /*coderunner*/
    "code-runner.runInTerminal": true, //coderunner ターミナル出力
    "workbench.editor.enablePreview": false, //エクスプローラーからファイルを開いたときプレビューになることを無効にする
    "editor.tabSize": 2, //インデントの大きさ2
    "editor.insertSpaces": true, //Tabキーを押すとスペースが挿入
    "editor.renderWhitespace": "all", //半角スペースに描写
    "editor.minimap.enabled": false, //ミニマップを消去する
    "explorer.confirmDelete": false, // ファイル削除のときのポップアップを無効
    "explorer.confirmDragAndDrop": false, // ファイル移動のときのポップアップを無効
    "files.autoSave": "afterDelay",// ファイル編集後に自動保存
    "editor.wordWrap": "on", //長い行は折かえして表示
    "editor.hover.enabled": false,//ポップアップを削除
    "liveServer.settings.donotShowInfoMsg": true, //liveserverのinfoを非表示
    "search.showLineNumbers": true,//検索結果に行番号を含める
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe", //defaultのターミナルをpowershell
    "editor.suggestSelection": "first", //サジェスト(予測変換)の一覧の選択を一番上にする
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "editor.hover.sticky": false, //ホバーを表示し続けるかどうか制御
    "liveServer.settings.CustomBrowser": "chrome", // LiveserverのブラウザをChromeに設定
    "window.zoomLevel": -1, 
    "emmet.includeLanguages": {
    "javascript": "javascriptreact" //ReactでEmmet記法を利用できるようにする
    },
    
    "cSpell.userWords": [
        "Batankyu",
        "Hankaku",
        "Zenkeshi",
        "accountcontrol",
        "csrf",
        "javascripts",
        "linebreak",
        "messageform",
        "messagequery",
        "mypage",
        "newroom",
        "puyo",
        "regist",
        "resave",
        "signup",
        "socketio",
        "sortablejs"
    ],
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    }
}
